<hardware_config_options>
    
    <!-- Audio Defaults - This category offers default audio settings which can be loaded to match hardware quality when the game is first run. -->
    <category name="audioDefault">
        <option name="low" type="default">
            <audio_card>
				<audio mixing="software" reverbs="0" voices="40" />
            </audio_card>
        </option>
        <option name="medium" >
            <audio_card>
                <audio mixing="default" reverbs="1" voices="default" />
            </audio_card>
        </option>
        <option name="high">
            <audio_card>
                <audio mixing="creative" reverbs="1" voices="creative" />
            </audio_card>
        </option>
    </category>   
     
    <!-- Graphics Defaults - This category offers default overall graphical settings. -->
    <category name="graphicsDetail">
        <option name="low">
			<graphics_detail level="low" />
            <graphics_card>
				<resolution width="1280" height="720" aspect="normal" fullscreen="true">
					<refreshRate rate="60" />
				</resolution>
			</graphics_card>
            <ref category="multisampling" option="2x" />
            <ref category="vsync" option="on" />
            <ref category="wind" option="off" />
            <ref category="shadows" option="low" />
            <ref category="particles" option="low" />
            <ref category="mirrors" option="off" />
            <ref category="crowd" option="off" />
            <ref category="groundCover" option="low" />
            <ref category="trees" option="low" />
            <ref category="reflections" option="low" />
            <ref category="motionBlur" option="off" />
            <ref category="skidmarks" option="off" />
            <ref category="vehicleDrivers" option="low" />
            <ref category="vehicleLOD" option="low" />
        </option>
        <option name="medium" type="default">
            <graphics_detail level="medium" />
            <graphics_card>
				<resolution width="1280" height="720" aspect="normal" fullscreen="true">
					<refreshRate rate="60" />
				</resolution>
			</graphics_card>
            <ref category="multisampling" option="4x" />
            <ref category="vsync" option="on" />
            <ref category="wind" option="off" />
            <ref category="shadows" option="medium" />
            <ref category="particles" option="medium" />
            <ref category="mirrors" option="on" />
            <ref category="crowd" option="medium" />
            <ref category="groundCover" option="medium" />
            <ref category="trees" option="medium" />
            <ref category="reflections" option="medium" />
            <ref category="motionBlur" option="on" />
            <ref category="skidmarks" option="on" />
            <ref category="vehicleDrivers" option="medium" />
            <ref category="vehicleLOD" option="medium" />
        </option>
        <option name="high">
            <graphics_detail level="high" />
            <graphics_card>
				<resolution width="1600" height="900" aspect="normal" fullscreen="true">
					<refreshRate rate="60" />
				</resolution>
			</graphics_card>
            <ref category="multisampling" option="4x" />
            <ref category="vsync" option="on" />
            <ref category="wind" option="on" />
            <ref category="shadows" option="high" />
            <ref category="particles" option="high" />
            <ref category="mirrors" option="on" />
            <ref category="crowd" option="high" />
            <ref category="groundCover" option="high" />
            <ref category="trees" option="high" />
            <ref category="reflections" option="high" />
            <ref category="motionBlur" option="on" />
            <ref category="skidmarks" option="on" />
            <ref category="vehicleDrivers" option="high" />
            <ref category="vehicleLOD" option="high" />
        </option>
        <option name="ultra">
            <graphics_detail level="ultra" />
            <graphics_card>
				<resolution width="1920" height="1080" aspect="normal" fullscreen="true">
					<refreshRate rate="60" />
				</resolution>
			</graphics_card>
            <ref category="multisampling" option="4x" />
            <ref category="vsync" option="on" />
            <ref category="wind" option="on" />
            <ref category="shadows" option="ultra" />
            <ref category="particles" option="ultra" />
            <ref category="mirrors" option="on" />
            <ref category="crowd" option="high" />
            <ref category="groundCover" option="high" />
            <ref category="trees" option="high" />
            <ref category="reflections" option="ultra" />
            <ref category="motionBlur" option="on" />
            <ref category="skidmarks" option="on" />
            <ref category="vehicleDrivers" option="ultra" />
            <ref category="vehicleLOD" option="ultra" />
        </option>
    </category>
          
    <category name="aspect" >
		<option name="normal" >
			<graphics_card>
				<resolution aspect="normal" />
			</graphics_card>
		</option>
		<option name="4:3" >
			<graphics_card>
				<resolution aspect="4:3" />
			</graphics_card>
		</option>
		<option name="5:4" >
			<graphics_card>
				<resolution aspect="5:4" />
			</graphics_card>
		</option>
		<option name="16:9" >
			<graphics_card>
				<resolution aspect="16:9" />
			</graphics_card>
		</option>
		<option name="16:10" >
			<graphics_card>
				<resolution aspect="16:10" />
			</graphics_card>
		</option>
    </category>
          
    <category name="multisampling" >
        <option name="off" >
			<graphics_card>
                <multisampling level="0" >
					<back_buffer level="0" />
					<colour_target level="0" />
					<minimap level="0" />
					<codriver_icon level="0" />
					<dynamic_envmap level="0" />
					<static_envmap level="0" />
					<rear_view_mirror level="0" />
				</multisampling>
			</graphics_card>
		</option>
		<option name="2x" >
			<graphics_card>
				<multisampling level="2" >
                    <back_buffer level="2" />
                    <colour_target level="2" />
                    <minimap level="2" />
                    <codriver_icon level="2" />
                    <dynamic_envmap level="0" />
                    <static_envmap level="0" />
                    <rear_view_mirror level="0" />
                </multisampling>
			</graphics_card>
        </option>
        <option name="4x" >
			<graphics_card>
                <multisampling level="4" >
                    <back_buffer level="4" />
                    <colour_target level="4" />
                    <minimap level="4" />
                    <codriver_icon level="4" />
                    <dynamic_envmap level="0" />
                    <static_envmap level="0" />
                    <rear_view_mirror level="0" />
                </multisampling>
			</graphics_card>
        </option>
    </category>
    
    <category name="vsync" >
		<option name="on">
			<graphics_card>
				<resolution vsync="1" />
            </graphics_card>
        </option>
		<option name="off">
			<graphics_card>
				<resolution vsync="0" />
            </graphics_card>
        </option>
    </category>
    
