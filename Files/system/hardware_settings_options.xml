		<option name="0.9">
			<graphics_card>
				<gamma level="0.9" />
			</graphics_card>
		</option>
		<option name="1.0">
			<graphics_card>
				<gamma level="1.0" />
			</graphics_card>
		</option>
		<option name="1.1">
			<graphics_card>
				<gamma level="1.1" />
			</graphics_card>
		</option>
		<option name="1.2">
			<graphics_card>
				<gamma level="1.2" />
			</graphics_card>
		</option>
		<option name="1.3">
			<graphics_card>
				<gamma level="1.3" />
			</graphics_card>
		</option>
		<option name="1.4">
			<graphics_card>
				<gamma level="1.4" />
			</graphics_card>
		</option>
		<option name="1.5">
			<graphics_card>
				<gamma level="1.5" />
			</graphics_card>
		</option>
		<option name="1.6">
			<graphics_card>
				<gamma level="1.6" />
			</graphics_card>
		</option>
		<option name="1.7">
			<graphics_card>
				<gamma level="1.7" />
			</graphics_card>
		</option>
		<option name="1.8">
			<graphics_card>
				<gamma level="1.8" />
			</graphics_card>
		</option>
		<option name="1.9">
			<graphics_card>
				<gamma level="1.9" />
			</graphics_card>
		</option>
		<option name="2.0">
			<graphics_card>
				<gamma level="2.0" />
			</graphics_card>
		</option>
		<option name="2.1">
			<graphics_card>
				<gamma level="2.1" />
			</graphics_card>
		</option>
		<option name="2.2">
			<graphics_card>
				<gamma level="2.2" />
			</graphics_card>
		</option>
		<option name="2.3">
			<graphics_card>
				<gamma level="2.3" />
			</graphics_card>
		</option>
		<option name="2.4">
			<graphics_card>
				<gamma level="2.4" />
			</graphics_card>
		</option>
		<option name="2.5">
			<graphics_card>
				<gamma level="2.5" />
			</graphics_card>
		</option>
    </category>
    
	<category name="wind" >
		<option name="on" >
			<wind particles="true" groundcover="true" />
		</option>
		<option name="off" >
			<wind particles="false" groundcover="false" />
		</option>
    </category>
    
    <category name="shadows" >
		<option name="low" >
            <shadows enabled="true" size="1024" maskQuality="0" />
            <dynamic_ambient_occ enabled="false" />
        </option>
        <option name="medium" >
            <shadows enabled="true" size="1024" maskQuality="1" />
            <dynamic_ambient_occ enabled="true" />
        </option>
        <option name="high" >
            <shadows enabled="true" size="2048" maskQuality="2" />
            <dynamic_ambient_occ enabled="true" />
        </option>
		<option name="ultra" >
            <shadows enabled="true" size="2048" maskQuality="2" />
            <dynamic_ambient_occ enabled="true" />
        </option>
    </category>
    
    <category name="particles" >
		<option name="off" >
            <particles enabled="false" collisions="false" max="500" />
		</option>
		<option name="low" >
            <particles enabled="true" collisions="false" max="500" />
		</option>
		<option name="medium" >
            <particles enabled="true" collisions="false" max="2000" />
		</option>
		<option name="high" >
            <particles enabled="true" collisions="true" max="4000" />
        </option>
		<option name="ultra" >
            <particles enabled="true" collisions="true" max="6000" />
        </option>
    </category>
    
    <category name="mirrors" >
		<option name="on" >
            <mirrors enabled="true" forceBilinear="true" left_w="128" left_h="128" middle_w="384" middle_h="256" right_w="64" right_h="64" fmt16bit="true" />
		</option>
		<option name="off" >
            <mirrors enabled="false" forceBilinear="true" left_w="128" left_h="128" middle_w="384" middle_h="256" right_w="64" right_h="64" fmt16bit="true" />
		</option>
    </category>
    
    <category name="drawDistance" >
		<option name="low" >
			<visibility level="low" clip="500" cull="250" />
		</option>
		<option name="medium" >
			<visibility level="medium" clip="2500" cull="1250" />
		</option>
		<option name="high" >
			<visibility level="high" clip="15000" cull="2000" />
		</option>
		<option name="ultra" >
			<visibility level="high" clip="25000" cull="4000" />
		</option>
    </category>
    
    <category name="crowd" >
		<option name="high" >
            <crowd enabled="true" lodQuality="2"/>
		</option>
		<option name="medium" >
            <crowd enabled="true" lodQuality="1"/>
		</option>
		<option name="off" >
            <crowd enabled="false" lodQuality="0"/>
		</option>
    </category>
    
    <category name="groundCover" >
        <option name="off" >
            <groundcover enabled="false" layers="0" />
		</option>
        <option name="low" >
            <groundcover enabled="true" layers="1" />
		</option>
		<option name="medium" >
            <groundcover enabled="true" layers="2" />
		</option>
		<option name="high" >
            <groundcover enabled="true" layers="4" />
		</option>
    </category>

    <category name="vehicleDrivers" >
		<option name="off" >
            <vehicles characterQuality="0" />
		</option>
		<option name="low" >
            <vehicles characterQuality="1" />
		</option>
		<option name="medium" >
            <vehicles characterQuality="2" />
		</option>
		<option name="high" >
            <vehicles characterQuality="3" />
		</option>
		<option name="ultra" >
            <vehicles characterQuality="4" />
		</option>
    </category>
    
    <category name="vehicleLOD" >
		<option name="low" >
            <vehicles lodQuality="0" />
		</option>
		<option name="medium" >
            <vehicles lodQuality="1" />
		</option>
		<option name="high" >
            <vehicles lodQuality="2" />
		</option>
		<option name="ultra" >
            <vehicles lodQuality="3" />
		</option>
    </category>

    <category name="trees" >
        <option name="low" >
            <trees visibility="500" low="180" high="60" lodQuality="1" />
		</option>
        <option name="medium" >
            <trees visibility="1000" low="180" high="60" lodQuality="1" />
		</option>
        <option name="high" >
            <trees visibility="2000" low="180" high="60" lodQuality="2" />
		</option>
    </category>

    <category name="reflections" >
        <option name="low" >
            <reflections faces="0" size="256" forceBilinear="true" />
		</option>
        <option name="medium" >
            <reflections faces="3" size="256" forceBilinear="true" />
		</option>
        <option name="high" >
            <reflections faces="6" size="256" forceBilinear="true" />
		</option>
        <option name="ultra" >
            <reflections faces="6" size="512" forceBilinear="false" />
		</option>
    </category>

    <category name="motionBlur" >
		<option name="on" >
            <postprocess blur="true" />
        </option>
        <option name="off" >
            <postprocess blur="false" />
		</option>
    </category>
    
    <category name="skidmarks" >
		<option name="on" >
            <skidmarks enabled="true" />
		</option>
		<option name="off" >
            <skidmarks enabled="false" />
		</option>
    </category>
    
	<!-- Individual audio settings - The components below represent individual setting which may be altered via the front end. -->
	<category name="audioMixing" >
		<option name="software" >
			<audio_card>
				<audio mixing="software" />
			</audio_card>
		</option>
		<option name="creative" >
			<audio_card>
				<audio mixing="creative" />
			</audio_card>
		</option>
		<option name="default" >
			<audio_card>
				<audio mixing="default" />
			</audio_card>
		</option>
    </category>
    
    <category name="audioQuality" >
		<option name="off" >
			<audio_card>
				<audio reverbs="0" />
			</audio_card>
		</option>
		<option name="low" >
			<audio_card>
				<audio reverbs="1" />
			</audio_card>
		</option>
		<option name="high" >
			<audio_card>
				<audio reverbs="2" />
			</audio_card>
		</option>
    </category>
      
    <category name="audioVoices" >
		<option name="40" >
			<audio_card>
				<audio voices="40" />
			</audio_card>
		</option>
		<option name="50" >
			<audio_card>
				<audio voices="50" />
			</audio_card>
		</option>
		<option name="60" >
			<audio_card>
				<audio voices="60" />
			</audio_card>
		</option>
		<option name="70" >
			<audio_card>
				<audio voices="70" />
			</audio_card>
		</option>
		<option name="80" >
			<audio_card>
				<audio voices="80" />
			</audio_card>
		</option>
		<option name="creative" >
			<audio_card>
				<audio voices="creative" />
			</audio_card>
		</option>
		<option name="default" >
			<audio_card>
				<audio voices="default" />
			</audio_card>
		</option>
    </category>
       
</hardware_config_options>
